pipeline {
    agent any
    
    tools{
        nodejs "npm install node"
    }
    
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './bdo-mvp/jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './bdo-mvp/jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)?'
                sh './bdo-mvp/jenkins/scripts/kill.sh'
            }
        }
    }
}
